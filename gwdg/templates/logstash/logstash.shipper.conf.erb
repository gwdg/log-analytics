# Logstash conf for logstash -> redis shipper
input {

  file {
    path => [ "/var/log/*.log", "/var/log/messages", "/var/log/syslog" ]
    type => "syslog"
  }

#  file {
#    path => [ "/var/log/apache2/access.log" ]
#    type => "apache-server-home"
#  }

}

output {
  redis { 
  	host 		=> "<%= scope['::gwdg::logging::logstash::redis_host'] %>" 
  	data_type 	=> "list" 
  	key 		=> "logstash" 
  }
}